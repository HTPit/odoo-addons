<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_cash_report_view" model="ir.ui.view">
            <field name="name">Cash Report</field>
            <field name="model">cash_report</field>
            <field name="arch" type="xml">
            <form string="Report Options">
                <group col="4">
                    <field name="chart_account_id" widget='selection'/>
                    <field name="company_id" invisible="1"/>
                    <field name="fiscalyear_id" domain="[('company_id','=',company_id)]" />
                    <field name="target_move"/>
                    <field name="display_account"/>
                    <field name="sortby"/>
                    <field name="amount_currency"/>
                    <field name="only_cash_account"/>
                    <field name="expand_moves"/>
                    <newline/>
                </group>
                <notebook tabpos="up" colspan="4">
                    <page string="Filtros" name="filters">
                        <group>
                            <field name="filter"/>
                            <field name="initial_balance" attrs="{'readonly':[('filter', 'in', ('filter_no'))]}"/>
                        </group>
                        <group string="Fechas" attrs="{'invisible':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group string="Periodos" attrs="{'invisible':[('filter','!=','filter_period')], 'required':[('filter', '=', 'filter_period')]}">
                            <field name="period_from" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                            <field name="period_to" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                        </group>
                    </page>
                    <page string="Diarios" name="journal_ids">
                        <field name="journal_ids"/>
                    </page>
                </notebook>
                <footer>
                    <button name="check_report" string="Imprimir" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancelar" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_account_cash_menu" model="ir.actions.act_window">
            <field name="name">Reporte diario de Cajas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cash_report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_cash_report_view"/>
            <field name="target">new</field>
        </record>

       <menuitem id="menu_account_custom_reporting"
            name="Personalizado"
            parent="account.menu_finance_generic_reporting"/>

       <menuitem id="menu_account_cash_report"
            name="Reporte de cajas"
            action="action_account_cash_menu"
            parent="menu_account_custom_reporting"/>

    </data>
</openerp>
