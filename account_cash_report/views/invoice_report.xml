<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoice_report">
        <t t-call="report.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>

            <t t-foreach="docs" t-as="o">
                <t t-call="report.internal_layout">
                    <div class="page">

                        <!-- titulo del reporte -->
                        <h2 t-esc="data['title']"/>

                        <!-- filtros del reporte -->
                        <div class="row">
                            <div class="col-xs-4">
                                <t t-if="data['date_from']">
                                    <strong>Date from :</strong>
                                    <span t-esc="data['date_from']"/>
                                </t>
                            </div>
                            <div class="col-xs-4">
                                <t t-if="data['date_to']">
                                    <strong>Date to :</strong>
                                    <span t-esc="data['date_to']"/>
                                </t>
                            </div>
                            <div class="col-xs-4">
                                <strong>Cash :</strong>
                                <span t-esc="data['cash']"/>
                            </div>
                            <br/>
                        </div>

                        <br/>
                        <h3>Invoices</h3>

                        <!-- reporte de facturacion -->
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th class="text-left">Invoice No.</th>
                                    <th class="text-right">Total</th>
                                    <th class="text-left">Payment Method</th>
                                    <th class="text-left">Payment Date</th>
                                    <th class="text-left">Paid</th>
                                    <th class="text-left">Partner</th>
                                    <th class="text-left">Salesperson</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="invoices" t-as="invoice">
                                    <tr>
                                        <td style="white-space: nowrap;">
                                            <span t-esc="invoice['number']"/>
                                        </td>
                                        <td class="text-right"
                                            style="white-space: text-nowrap;">
                                            <t t-if="invoice['total']">
                                                <span t-att-style="style"
                                                      t-esc="invoice['total']"
                                                      t-esc-options='{"widget": "monetary",
                                                      "display_currency": "res_company.currency_id"}'/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-esc="invoice['journal']"/>
                                        </td>
                                        <td>
                                            <span t-esc="invoice['date']"/>
                                        </td>
                                        <td>
                                            <span t-esc="invoice['paid']"/>
                                        </td>
                                        <td>
                                            <span t-esc="invoice['partner']"/>
                                        </td>
                                        <td>
                                            <span t-esc="invoice['salesperson']"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr style="font-weight: bold;">
                                    <td>
                                        <span class="text-left">Total
                                            Invoiced
                                        </span>
                                    </td>
                                    <td class="text-right"
                                        style="white-space: text-nowrap;">
                                        <span t-att-style="style"
                                              t-esc="total_invoiced"
                                              t-esc-options='{"widget": "monetary",
                                                  "display_currency": "res_company.currency_id"}'/>
                                    </td>
                                    <td/>
                                    <td/>
                                    <td/>
                                </tr>
                            </tbody>
                        </table>

                        <br/>
                        <h3>Receipts</h3>

                        <!-- reporte de recibos -->
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th class="text-left">Receipt No.</th>
                                    <th class="text-right">Income</th>
                                    <th class="text-left">Payment Method</th>
                                    <th class="text-left">Invoice No.</th>
                                    <th class="text-left">Invoice Date</th>
                                    <th class="text-left">Partner</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="receipts" t-as="receipt">
                                    <tr>
                                        <td style="white-space: nowrap;">
                                            <span t-esc="receipt['number']"/>
                                        </td>
                                        <td class="text-right"
                                            style="white-space: text-nowrap;">
                                            <t t-if="receipt['total']">
                                                <span t-att-style="style"
                                                      t-esc="receipt['total']"
                                                      t-esc-options='{"widget": "monetary",
                                                  "display_currency": "res_company.currency_id"}'/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-esc="receipt['journal']"/>
                                        </td>
                                        <td style="white-space: nowrap;">
                                            <span t-esc="receipt['invoice_no']"/>
                                        </td>
                                        <td>
                                            <span t-esc="receipt['date']"/>
                                        </td>
                                        <td>
                                            <span t-esc="receipt['partner']"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr style="font-weight: bold;">
                                    <td>
                                        <span class="text-left">Total Income
                                        </span>
                                    </td>
                                    <td class="text-right"
                                        style="white-space: text-nowrap;">
                                        <span t-att-style="style"
                                              t-esc="total_income"
                                              t-esc-options='{"widget": "monetary",
                                                  "display_currency": "res_company.currency_id"}'/>
                                    </td>
                                    <td/>
                                    <td/>
                                    <td/>
                                </tr>
                            </tbody>
                        </table>

                        <br/>
                        <h3>Payment methods</h3>

                        <!-- reporte de medios de pago -->
                        <table class="table table-condensed">
                            <col width="40%"/>
                            <col width="30%"/>
                            <col width="30%"/>
                            <thead>
                                <tr>
                                    <th class="text-left">Totals by payment
                                        method
                                    </th>
                                    <th class="text-right">Balance</th>
                                    <th/>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="journals" t-as="journal">
                                    <tr>
                                        <td>
                                            <span t-esc="journal['journal']"/>
                                        </td>
                                        <td class="text-right"
                                            style="white-space: nowrap;">
                                            <span t-att-style="style"
                                                  t-esc="journal['total']"
                                                  t-esc-options='{"widget": "monetary",
                                                  "display_currency": "res_company.currency_id"}'/>
                                        </td>
                                    </tr>
                                    <tr/>
                                </t>
                                <tr style="font-weight: bold;">
                                    <td>
                                        <span class="text-left">Total
                                            Incoming
                                        </span>
                                    </td>
                                    <td class="text-right"
                                        style="white-space: nowrap;">
                                        <span t-att-style="style"
                                              t-esc="total_journal"
                                              t-esc-options='{"widget": "monetary",
                                                  "display_currency": "res_company.currency_id"}'/>
                                    </td>
                                    <td/>
                                    <td/>
                                    <td/>
                                </tr>
                            </tbody>
                        </table>

                        <br/>
                        <h3>Summary</h3>

                        <!-- resumen total -->
                        <table border="1" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-left">INVOICED</th>
                                    <th class="text-right">INCOMING</th>
                                    <th class="text-right">CASH</th>
                                    <th class="text-right">CASH FAILURE</th>
                                </tr>
                            </thead>
                            <tr>
                                <td class="text-right"
                                    style="white-space: nowrap;">
                                    <span t-att-style="style"
                                          t-esc="total_invoiced"
                                          t-esc-options='{"widget": "monetary",
                                          "display_currency": "res_company.currency_id"}'/>
                                </td>
                                <td class="text-right"
                                    style="white-space: nowrap;">
                                    <span t-att-style="style"
                                          t-esc="total_income"
                                          t-esc-options='{"widget": "monetary",
                                          "display_currency": "res_company.currency_id"}'/>
                                </td>
                                <td class="text-right"
                                    style="white-space: nowrap;">
                                    <span t-att-style="style"
                                          t-esc="total_cash"
                                          t-esc-options='{"widget": "monetary",
                                          "display_currency": "res_company.currency_id"}'/>
                                </td>
                                <td class="text-right"
                                    style="white-space: nowrap;">
                                    <span t-att-style="style"
                                          t-esc="cash_failure"
                                          t-esc-options='{"widget": "monetary",
                                          "display_currency": "res_company.currency_id"}'/>
                                </td>
                            </tr>
                        </table>

                        <br/>
                        <br/>
                        <table width="100%">
                            <tr>
                                <td>
                                    <p>Cashier Signature</p>
                                </td>
                                <td>
                                    <p>Boss Signature</p>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
