<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cashier_report_view" model="ir.ui.view">
        <field name="name">CASH REPORT: Cash Report</field>
        <field name="model">account_cash_report.cashier.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <separator string="Daily Cash Report"/>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="cash_id"/>
                        <field name="expand_moves"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="Print" type="object"
                            default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cashier_invoice_report_view" model="ir.ui.view">
        <field name="name">CASH REPORT: Invoice Report</field>
        <field name="model">account_cash_report.invoice.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <separator string="Daily Invoice Report"/>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="cash_id"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="Print" type="object"
                            default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ACTION -->

    <record id="action_cashier_report_menu" model="ir.actions.act_window">
        <field name="name">Cashier Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account_cash_report.cashier.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cashier_report_view"/>
        <field name="target">new</field>
    </record>

    <record id="action_invoice_report_menu" model="ir.actions.act_window">
        <field name="name">Invoice Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account_cash_report.invoice.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cashier_invoice_report_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_cash_item_report"
              name="Cash report"
              parent="menu_cash_main"
              sequence="90"
              action="action_cashier_report_menu"
    />

    <menuitem id="menu_invoice_item_report"
              name="Invoice report"
              parent="menu_cash_main"
              sequence="91"
              action="action_invoice_report_menu"
    />

    <report id="action_cashier_report"
            model="account_cash_report.cashier.report"
            string="Cash Report"
            report_type="qweb-pdf"
            name="account_cash_report.cashier_report"
            file="cashier_report"
    />

    <report id="action_invoice_cashier_report"
            model="account_cash_report.invoice.report"
            string="Invoice Report"
            report_type="qweb-pdf"
            name="account_cash_report.invoice_report"
            file="invoice_report"
    />

</odoo>
