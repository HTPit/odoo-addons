<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_process_discount_form" model="ir.ui.view">
        <field name="name">Process Global Discount</field>
        <field name="model">sale_global_discount.apply_discount</field>
        <field name="arch" type="xml">
            <form string="Process global discount">

                <field name="discount"/>

                <footer>
                    <button name="apply_discount" string="Apply" type="object"
                            class="oe_highlight"/>
                    or
                    <button string="_Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
