<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Supplier Receipt Form  -->
        <record id="invoice_form" model="ir.ui.view">
            <field name="name">L10N AR ACCOUNT WITHHOLDING boton de calcular percepciones</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_print']" position="before">
                     <button name="compute_perceptions" type="object" string="Calcular percepciones" attrs="{'invisible':[('draft','=',False)]}" groups="base.group_user"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
