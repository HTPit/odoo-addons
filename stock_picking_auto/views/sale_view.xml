<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- cuando el usuario es cajero le aparece el boton confirmar y
            transferir en la orden de compra -->

        <record id="view_order_form_stock_picking_auto" model="ir.ui.view">
            <field name="name">stock_picking_auto: replace buttons</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="groups_id" eval="[(4, ref('group_stock_picking_auto_cashier'))]"/>
            <field name="arch" type="xml">

                <xpath expr="(//button[@name='action_confirm'])[2]"
                       position="attributes">

                    <attribute name="string">Confirm and Transfer</attribute>
                    <attribute name="name">action_confirm_send</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
