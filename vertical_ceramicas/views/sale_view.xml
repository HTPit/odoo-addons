<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- modificamos reemplazo route_id por route_select -->
        <record id="view_order_form_ceramicas" model="ir.ui.view">
            <field name="name">Ceramicas: modificar rutas drop down</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit"/>
            <field name="arch" type="xml">

                <xpath expr="(//field[@name='route_id'])[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="(//field[@name='route_id'])[2]" position="after">
                    <field name="route_select" string="Ruta"/>
                </xpath>

            </field>
        </record>

        <!-- le damos permiso para que modifiquen el precio -->
        <record id="sale_form_readonly_price_reves" model="ir.ui.view">
            <field name="name">Ceramicas: permiso para modificar precio</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>

            <field name="groups_id" eval="[  (6, 0, [ref('group_reves_manager_users'),
                                                     ref('group_reves_admin_users'),
                                                     ref('base.group_erp_manager'),
                                                     ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>

        <!-- eliminar el campo Deposito -->
        <record id="sale_form_hide_warehouse_reves" model="ir.ui.view">
            <field name="name">Ceramicas: ocultar campo deposito</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='warehouse_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- ocultar el menu Contabilidad / Proveedores para los usuarios que no son administradores -->
        <record model="ir.ui.menu" id="account.menu_finance_payables">
            <field name="groups_id" eval="[(6,0,[
                                                    ref('group_reves_admin_users'),
                                                    ref('base.group_erp_manager')
                                                ])]"/>
        </record>

    </data>
</openerp>