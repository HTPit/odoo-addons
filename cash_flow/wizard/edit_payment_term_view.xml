<?xml version="1.0"?>
<odoo>
    <record id="edit_payment_term_view" model="ir.ui.view">
        <field name="name">Edit Payment Term</field>
        <field name="model">edit.payment.term</field>
        <field name="arch" type="xml">
            <form string="None">
                <group>
                    <field name="element_ids" nolabel="1" editable="false">
                        <tree >
                            <field name="payment_term_id"/>
                            <field name="date_invoice"/>
                            <field name="date_due"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="process_invoices" string="Process"
                            type="object" default_focus="1"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_edit_payment_term" model="ir.actions.act_window">
        <field name="name">Edit Payment Term</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">edit.payment.term</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="edit_payment_term_view"/>
        <field name="target">new</field>
    </record>

</odoo>
