<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- modifica el filtro del reporte de diarios para poder filtrar por fecha -->

        <record id="account_report_print_journal_date" model="ir.ui.view">
            <field name="name">account.report.print.journal.date</field>
            <field name="model">account.print.journal</field>
            <field name="inherit_id" ref="account.account_report_print_journal"/>
            <field name="arch" type="xml">

                <xpath expr="//separator[@string='Periods']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='period_from']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='period_to']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='period_to']" position="after">

                    <group string="Filtros" colspan="4">
                        <group>
                            <field name="filter" on_change="onchange_filter(filter, fiscalyear_id)"/>
                        </group>
                        <hr/>
                        <group string="Dates" attrs="{'invisible':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>

                        <group string="Periods" attrs="{'invisible':[('filter','!=','filter_period')], 'required':[('filter', '=', 'filter_period')]}">
                            <field name="period_from" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                            <field name="period_to" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                        </group>
                    </group>

                </xpath>

            </field>
        </record>

    </data>
</openerp>

