<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="price_update_view_form" model="ir.ui.view">
        <field name="name">price.update.view.form</field>
        <field name="model">product.price.update</field>
        <field name="arch" type="xml">
            <form string="ActualizaciÃ³n de Precios">
                <label string="Puedes actualizar los precios por porcentaje o por monto. Tanto para incrementar o disminuir el precio."/>
                <h1>
                    <label for="name"/>
                    <field name="name"/>
                </h1>
                <h3>
                    <group>
                        <field name="type"/>
                        <field name="price"/>
                        <field name="supplier" attrs="{'invisible': [('price', '!=', 'supplier_purchase')], 'required': [('price', '=', 'supplier_purchase')]}" domain="[('supplier', '=', True)]" options="{'no_open': True, 'no_create': True}"/>
                        <field name="value"/>
                    </group>
                </h3>
                <notebook>
                    <page string="Productos a afectar">
                        <field attrs="{'invisible': [('price', '==', 'supplier_purchase')]}" name="product_ids" readonly="True">
                            <tree>
                                <field name="default_code"/>
                                <field name="name"/>
                                <field name="lst_price"/>
                                <field name="standard_price"/> 
                            </tree>
                        </field>
                        <field name="product_ids_2" attrs="{'invisible': [('price', '!=', 'supplier_purchase')]}" readonly="True">
                            <tree>
                                <field name="default_code"/>
                                <field name="name"/>
                                <field name="price_by_supplier"/> 
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Confirmar" name="confirm" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="price_update_action" model="ir.actions.act_window">
        <field name="name">Actualizar Precios</field>
        <field name="res_model">product.price.update</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="price_update_action_menu" action="price_update_action" parent="point_of_sale.menu_point_of_sale" sequence="5"/>
</odoo>
