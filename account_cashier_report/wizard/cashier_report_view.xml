<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cashier_report_view" model="ir.ui.view">
        <field name="name">Cashier Report</field>
        <field name="model">account_cashier_report.cashier.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <separator string="Cashier Report"/>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="display_journals" widget="radio"/>
                        <field name="expand_moves"/>
                    </group>
                </group>
                <label string="The cashier report is bla bla bla"/>
                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ACTION -->

    <record id="action_cashier_report_menu" model="ir.actions.act_window">
        <field name="name">Cashier Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account_cashier_report.cashier.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cashier_report_view"/>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menu_cash_item_report"
            name="Cashier report"
            parent="account.menu_finance_bank_and_cash"
            sequence="90"
            groups="base.group_erp_manager"
            action="action_cashier_report_menu"
    />

    <report
            id="action_cashier_report"
            model="account_cashier_report.cashier.report"
            string="Cashier Report"
            report_type="qweb-pdf"
            name="account_cashier_report.cashier_report"
            file="cashier_report"
    />

</odoo>
