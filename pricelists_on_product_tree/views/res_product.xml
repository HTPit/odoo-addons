<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--  Agrega los tres precios en la lista de productos -->
        <record id="view_product_add_pricelist" model="ir.ui.view">
            <field name="name">Pricelist On Product Tree: add pricelists</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="pricelist_1"/>
                    <field name="pricelist_2"/>
                    <field name="pricelist_3"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
